<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <TextView android:id="@+id/username"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />
    <TextView android:id="@+id/label_followers"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" 
        android:text="Followers:"/>
    <TextView android:id="@+id/followers"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_below="@id/label_followers"
        android:layout_alignRight="@id/label_followers"/>
    <TextView android:id="@+id/update"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_below="@id/username"
        android:layout_alignLeft="@id/username"
        android:layout_toLeftOf="@id/followers"
        android:singleLine="false"
        android:textSize="8sp"/>
</RelativeLayout>

